@model IEnumerable<MvcLabManager.Models.Lab>

@{
    ViewData["Title"] = "Laboratorios";
}
<h1>@ViewData["Title"]</h1>


@if(Model.Count() == 0)
{
    <p>Nnehum Laboratorio cadastrado</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Nome</th>
                <th>Bloco</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var lab in Model)
            {
                <tr>
                    <td>@lab.Id</td>
                    <td>@lab.Number</td>
                    <td>@lab.Name</td>
                    <td>@lab.Sector</td>
                    <td>
                         <a class="btn btn-primary btn-sm"
                            asp-controller="Lab" 
                            asp-action="Show" 
                            asp-route-id="@lab.Id">Ver</a>
                        <a class="btn btn-primary btn-sm"
                            asp-controller="Lab" 
                            asp-action="Update" 
                            asp-route-id="@lab.Id">Atulizar</a>
                       <a class="btn btn-primary btn-sm"
                            asp-controller="Lab" 
                            asp-action="Delete" 
                            asp-route-id="@lab.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}